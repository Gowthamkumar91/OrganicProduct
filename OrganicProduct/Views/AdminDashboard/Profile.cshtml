@{
    ViewData["Title"] = "Admin Profile";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid mt-4">
    <h3 class="mb-4">
        <i class="fa fa-user-circle me-2"></i> Admin Profile
    </h3>

    <div class="row">
        <!-- Profile Image & Name -->
        <div class="col-md-4 text-center mb-4">
            <img src="~/img/avatar4.png" class="img-fluid rounded-circle shadow-sm mb-3" style="max-width: 150px;" alt="Admin Photo" />
            <h5 class="mt-2 mb-0">Admin User</h5>
           
        </div>

        <!-- Profile Details -->
        <div class="col-md-8">
            <div class="card shadow-sm p-3">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="card-title mb-0">Profile Details</h5>
                        <a class="btn btn-sm btn-outline-primary" href=" /AdminDashboard/EditProfile">
                            <i class="fa fa-edit me-1"></i> Edit
                        </a>
                    </div>

                    <dl class="row">
                        <dt class="col-sm-4">Full Name</dt>
                        <dd class="col-sm-8">Admin User</dd>

                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">organicadmin123@gmail.com</dd>

                        <dt class="col-sm-4">Role</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-primary">Administrator</span>
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>
