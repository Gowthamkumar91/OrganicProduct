@{
    ViewData["Title"] = "About Us";
}

<section class="py-5 bg-light">
    <div class="container-lg">
        <div class="row">
            <div class="col-md-12 text-center mb-5">
                <h2 class="fw-bold text-success">About Organic Store</h2>
                <p class="fs-5 text-muted">Pure. Fresh. Natural.</p>
            </div>
        </div>

        <div class="row align-items-center">
            <div class="col-md-6">
                <img src="~/img/about-organic.jpg" class="img-fluid rounded" alt="Organic Farming" />
            </div>
            <div class="col-md-6">
                <h3 class="fw-semibold mb-3">Why Choose Organic Food?</h3>
                <p class="text-muted fs-6">
                    At <strong>Organic Store</strong>, we believe in providing food that’s <strong>free from harmful chemicals, pesticides, and preservatives</strong>. Our products are sourced directly from trusted organic farms to ensure maximum freshness and nutrition.
                </p>
                <p class="text-muted fs-6">
                    Eating organic isn't just a choice; it's a commitment to <strong>healthier living</strong> and <strong>sustainable farming</strong>. Whether you're looking for fresh vegetables, juicy fruits, or nutrient-rich dry fruits – we have it all under one roof.
                </p>
            </div>
        </div>

        <div class="row text-center mt-5">
            <div class="col-md-4">
                <div class="p-4 border rounded">
                    <i class="fa-solid fa-carrot fa-2x text-success mb-3"></i>
                    <h5 class="fw-bold">Fresh Vegetables</h5>
                    <p class="text-muted">Farm-picked seasonal vegetables, delivered fresh to your doorstep.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="p-4 border rounded">
                    <i class="fa-solid fa-apple-whole fa-2x text-danger mb-3"></i>
                    <h5 class="fw-bold">Organic Fruits</h5>
                    <p class="text-muted">Sweet and juicy fruits grown without chemicals or artificial ripeners.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="p-4 border rounded">
                    <i class="fa-solid fa-seedling fa-2x text-warning mb-3"></i>
                    <h5 class="fw-bold">Healthy Dry Fruits</h5>
                    <p class="text-muted">Premium quality dry fruits packed with nutrition and taste.</p>
                </div>
            </div>
        </div>
    </div>
</section>
