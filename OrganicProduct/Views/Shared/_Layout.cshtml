

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OrganicProduct</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/custom.css" asp-append-version="true" />
   <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
     <!-- Swiper CSS  -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css" />

</head>
<body>
    <!-- Navbar -->
    <header>
    <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
        <div class="container-fluid">
            <a class="navbar-brand" href="/"> 
                 <img src="~/img/logo.svg" alt="Organic Logo" class="img-fluid" style="max-height: 40px;" />
                </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                 <form class="d-flex ms-3" asp-controller="Product" asp-action="Search" method="get">
                   <input class="form-control me-2" type="search" name="query" placeholder="Search products...">
                   <button class="btn btn-custom" type="submit">Search</button>
                 </form>
                <ul class="navbar-nav ms-auto">
                     
                     <!-- User Navbar Items -->

                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/About">About</a>
                    </li>
                   <li class="nav-item dropdown">
                      <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                         Products
                      </a>
                      <ul class="dropdown-menu">
                          <li><a class="dropdown-item" href="/User/Shop?category=Fruits">Fruits</a></li>
                          <li><a class="dropdown-item" href="/User/Shop?category=Vegetables">Vegetables</a></li>
                          <li><a class="dropdown-item" href="/User/Shop?category=DryFruits">Dry Fruits</a></li>
                      </ul>
                   </li>

                        <li class="nav-item">
                            <a asp-controller="Cart" asp-action="Index" class="nav-link">
                                <i class="fa fa-shopping-cart"></i> Cart
                            </a>
                        </li>
                       

                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <span class="nav-link text-success fw-bold">Hi, @User.Identity.Name.Split('@')[0]</span>
                            </li>
                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-link nav-link">Logout</button>
                                </form>
                            </li>
                        }
                        else

                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Signup">Signup</a>
                            </li>
                        }

                </ul>
            </div>
        </div>
    </nav>
    </header>
    <div class="container-fluid p-0">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

      <!-- Footer -->
    <footer class="bg-light py-5 border-top">
  <div class="container">
    <div class="row">

      <!-- Column 1 -->
      <div class="col-md-3 col-sm-6">
        <div class="footer-menu">
          <h5 class="widget-title">Organic</h5>
          <ul class="menu-list list-unstyled">
            <li><a asp-controller="Home" asp-action="About" class="nav-link">About us</a></li>
            <li><a href="#" class="nav-link">Conditions</a></li>
            <li><a href="#" class="nav-link">Our Journals</a></li>
            <li><a href="#" class="nav-link">Careers</a></li>
          </ul>
        </div>
      </div>

      <!-- Column 2 -->
      <div class="col-md-3 col-sm-6">
        <div class="footer-menu">
          <h5 class="widget-title">Customer Service</h5>
          <ul class="menu-list list-unstyled">
            <li><a href="#" class="nav-link">FAQ</a></li>
            <li><a href="#" class="nav-link">Contact</a></li>
            <li><a href="#" class="nav-link">Privacy Policy</a></li>
            <li><a href="#" class="nav-link">Returns & Refunds</a></li>
            <li><a href="#" class="nav-link">Delivery Information</a></li>
          </ul>
        </div>
      </div>

      <!-- Column 3 - Newsletter -->
      <div class="col-lg-4 col-md-6 col-sm-12">
        <div class="footer-menu">
          <h5 class="widget-title">Subscribe Us</h5>
          <p>Subscribe to our newsletter to get updates about our grand offers.</p>
          <form class="d-flex mt-3" action="#">
            <input type="email" class="form-control rounded-start rounded-0 bg-light" placeholder="Email Address">
            <button class="btn btn-dark rounded-end rounded-0" type="submit">Subscribe</button>
          </form>
        </div>
      </div>

    </div>
          <div class="footer-bottom mt-4">
              <p class="mb-1">&copy; @DateTime.Now.Year - Organic Store</p>
            <p class="mb-0">Fresh | Pure | Natural</p>
            <!-- Social Media Links -->
            <div class="mt-2">
                <a href="https://www.facebook.com/" class="text-muted me-3">
                    <i class="fa-brands fa-facebook"></i>
                </a>

                <!-- Instagram -->
                <a href="https://www.instagram.com/" class="text-muted me-3">
                    <i class="fa-brands fa-instagram"></i>
                </a>

                <!-- Twitter(X) -->
                <a href="https://www.twitter.com/" class="text-muted me-3">
                    <i class="fa-brands fa-x-twitter"></i>
                </a>
            </div>
          </div>
  </div>
</footer>

    <!-- jQuery should come first -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/custom.js" asp-append-version="true" defer></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
