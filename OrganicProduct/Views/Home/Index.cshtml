@{
    ViewData["Title"] = "Home Page";
}

<section class="main-banner d-flex align-items-center">
    <div class="container-lg">
        <div class="row">
            <div class="col-lg-6 pt-2 mt-2 ps-5">
                <h2 class="display-1 lh-sm">
