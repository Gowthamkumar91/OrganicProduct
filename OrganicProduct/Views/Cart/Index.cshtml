@model List<OrganicProduct.Models.Cart>

<div class="mt-3">
    <h3>Your Shopping Cart</h3>

</div>


@if (!Model.Any())
{
    <p>Your cart is empty.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Product</th>
                <th>Image</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
                <th>Action</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td><img src="@item.ImageUrl" width="60" /></td>
                    <td>₹@item.Price</td>
                    <td>
                        <div class="btn-group">
                            <a asp-action="Decrement" asp-route-productId="@item.ProductId" class="btn btn-sm btn-outline-secondary">-</a>
                            <span class="px-2">@item.Quantity</span>
                            <a asp-action="Increment" asp-route-productId="@item.ProductId" class="btn btn-sm btn-outline-secondary">+</a>
                        </div>
                    </td>
                    <td>₹@(item.Price * item.Quantity)</td>
                    <td>
                        <a asp-action="Remove" asp-route-productId="@item.ProductId" class="btn btn-sm btn-danger">Remove</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mt-3">
       
        <a href="#" class="btn btn-success m-lg-4">Checkout</a>
    </div>
}
